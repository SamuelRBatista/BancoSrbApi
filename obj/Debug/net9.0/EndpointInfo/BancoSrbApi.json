{
  "openapi": "3.0.4",
  "info": {
    "title": "BancoSrbApi",
    "description": "API de movimentação e saldo de conta corrente",
    "version": "v1"
  },
  "paths": {
    "/api/ContaCorrente/{id}": {
      "get": {
        "tags": [
          "ContaCorrente"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Movimento": {
      "post": {
        "tags": [
          "Movimento"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MovimentoRequestDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/MovimentoRequestDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/MovimentoRequestDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "MovimentoRequestDto": {
        "type": "object",
        "properties": {
          "chaveIdempotencia": {
            "type": "string",
            "nullable": true
          },
          "idContaCorrente": {
            "type": "string",
            "nullable": true
          },
          "valor": {
            "type": "number",
            "format": "double"
          },
          "tipoMovimento": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}